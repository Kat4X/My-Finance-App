<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:fitsSystemWindows="true"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="10dp"
    android:layout_gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_gradient">

        <TextView
            android:id="@+id/name_card_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Bank"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>


<!--        CardNumber START-->
        <TextView
            android:id="@+id/card_text_el_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="@id/card_text_el_4"
            app:layout_constraintBottom_toBottomOf="@id/card_text_el_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_text_el_2"/>

        <TextView
            android:id="@+id/card_text_el_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="@id/card_text_el_4"
            app:layout_constraintBottom_toBottomOf="@id/card_text_el_4"
            app:layout_constraintStart_toEndOf="@id/card_text_el_1"
            app:layout_constraintEnd_toStartOf="@id/card_text_el_3" />

        <TextView
            android:id="@+id/card_text_el_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="@id/card_text_el_4"
            app:layout_constraintBottom_toBottomOf="@id/card_text_el_4"
            app:layout_constraintStart_toEndOf="@id/card_text_el_2"
            app:layout_constraintEnd_toStartOf="@id/card_text_el_4"  />

        <TextView
            android:id="@+id/card_text_el_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5975"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/name_card_bank"
            app:layout_constraintStart_toEndOf="@id/card_text_el_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
<!--        CardNumber END-->

        <TextView
            android:id="@+id/card_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expire \nEnd"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/card_text_el_1"
            app:layout_constraintEnd_toEndOf="@id/card_text_el_1"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/21"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/card_text_el_2"
            app:layout_constraintStart_toStartOf="@id/card_text_el_2"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARD NAME"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/card_date_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/card_date_text"
            android:layout_marginBottom="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>